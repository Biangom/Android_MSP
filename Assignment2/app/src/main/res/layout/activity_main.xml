<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enable Bluetooth Discoverable"
        android:onClick="onClickDiscover"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startMonitorBtn"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Encounter Monitoring 시작하기" />

        <Button
            android:id="@+id/stopMonitorBtn"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Encounter Monitoring 종료하기" />
    </LinearLayout>

    <Button
        android:id="@+id/regisBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Device 등록하기" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/listReset"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="등록된 장치 Reset"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/listCheck"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="등록된 장치들 보기" />
    </LinearLayout>

    <Button
        android:id="@+id/logReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Reset"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/logText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />
</LinearLayout>



